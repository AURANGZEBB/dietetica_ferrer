<odoo>
    <record id="view_choose_ctt_delivery_carrier_form" model="ir.ui.view">
        <field name="name">choose.ctt.delivery.carrier.form</field>
        <field name="model">choose.delivery.carrier</field>
        <field name="arch" type="xml">
            <form string="Seleccionar transportista CTT">
                <group>
                    <field name="carrier_id" />
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="button_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
